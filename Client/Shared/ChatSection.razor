@using MVCBlazorChatApp.Client.Models

<div id="ChatSection">
    <div id="ChatContent">
    </div>
    <div id="ChatFooter">
        <EditForm EditContext="@editContext" OnValidSubmit="@ValidSubmit">
            <DataAnnotationsValidator />
            <div class="form-group">
                <div class="input-wrapper input-wrapper--column">
                    <div class="input">
                        <label class="icon"><i class="las la-comment-medical"></i></label>
                        <InputTextArea rows="1" @bind-Value="@MessageModel.Message" id="MessageTextArea"
                            placeholder="Type a message..."></InputTextArea>
                        <button id="emoji" type="button"></button>
                    </div>
                </div>
                <ValidationMessage For="@(() => MessageModel.Message)" />
            </div>
            <div>
                <button type="submit">Send <i class="las la-paper-plane"></i></button>
            </div>
        </EditForm>
    </div>
</div>