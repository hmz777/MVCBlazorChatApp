<div id="ChatSection">
    <div id="ChatContent">
        @if (!SectionHasMessages)
        {
            <div id="NoMessages">
                <img src="/media/imgassets/no_messages.svg" />
                <p>No messages available yet &#128517. <br /> When you type or receive messages, they'll appear here.</p>
            </div>
        }
    </div>
    <div id="ChatFooter">
        <EditForm EditContext="@editContext" OnValidSubmit="@ValidSubmit" @onreset="ResetForm">
            <DataAnnotationsValidator />
            <div class="form-group">
                <div class="input-wrapper input-wrapper--column">
                    <div class="input">
                        <label class="icon"><i class="las la-comment-medical"></i></label>
                        <textarea rows="1"
                                  @bind-value="@MessageModel.Message"
                                  @bind-value:event="oninput"
                                  @onfocus="InputFocus"
                                  dir="auto"
                                  id="MessageTextArea"
                                  placeholder="Type a message..."></textarea>
                        <button id="emoji" type="button"></button>
                    </div>
                </div>
                <ValidationMessage For="@(() => MessageModel.Message)" />
            </div>
            <div>
                <button id="MessageSubmit" type="submit">Send<i class="las la-paper-plane"></i></button>
            </div>
        </EditForm>
        <RingtoneComponent @ref="@RingtoneComponent" />
    </div>
</div>